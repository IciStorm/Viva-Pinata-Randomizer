<Window x:Class="Randomizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Randomizer"
        mc:Ignorable="d"
        Title="VP Randomizer" Height="450" Width="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- Top panel -->
            <RowDefinition Height="Auto" />
            <!-- Main content -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Top Grid -->
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <Label HorizontalContentAlignment="Center" FontWeight="Bold">General Options</Label>
                <CheckBox Content="Disable Tutorial" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                    <CheckBox.Resources>
                        <Style TargetType="{x:Type Path}">
                            <Setter Property="FlowDirection" Value="LeftToRight" />
                        </Style>
                    </CheckBox.Resources>
                </CheckBox>
                <CheckBox Content="Setting 2" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                    <CheckBox.Resources>
                        <Style TargetType="{x:Type Path}">
                            <Setter Property="FlowDirection" Value="LeftToRight" />
                        </Style>
                    </CheckBox.Resources>
                </CheckBox>
            </StackPanel>
            
            
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Package Path (.pkg):" />
                <TextBox x:Name="PackagePathTextBox" Height="25" />
                <TextBlock Text="Output Directory:" Margin="0,10,0,0"/>
                <TextBox x:Name="OutputDirTextBox" Height="25" />
                <Button Content="Test Pkg" Margin="0,20,0,0" Height="30"/>
                <TextBlock x:Name="ResultTextBlock" Margin="0,10,0,0" Foreground="DarkGreen"/>
            </StackPanel>
            
            
            <StackPanel Grid.Column="2" Margin="10">
                <Button Name="btnFilePath" Margin="0,0,0,5" Content="Set File Path"
                        Click="btnFilePath_Click"/>
                <Button Name="btnRandomize" Margin="0,5,0,5" IsEnabled="False" Content="Randomize Game"
                        Click="LoadPkg_Click"/>
                <Button Margin="0,5,0,5">Save Randomizer Settings</Button>
                <Button Margin="0,15,0,0" IsCancel="True">Credits</Button>
            </StackPanel>
        </Grid>

        <!-- Individual Settings -->
        <TabControl Grid.Row="1">
            <TabItem Header="Animal">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <CheckBox Content="Randomize Pinata Requirements" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Pinata Reactions" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Pinata Levels/Values" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Evolutions" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Tamed Sour Species" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Seed Order" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Shop Item Order" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                        <CheckBox Content="Randomize Item Prices" FlowDirection="RightToLeft" HorizontalAlignment="Left">
                            <CheckBox.Resources>
                                <Style TargetType="{x:Type Path}">
                                    <Setter Property="FlowDirection" Value="LeftToRight" />
                                </Style>
                            </CheckBox.Resources>
                        </CheckBox>
                    </StackPanel>

                    <StackPanel Grid.Column="1">
                        <Label Content="Max Number of Requirements per Category" HorizontalAlignment="Center"/>
                        <DockPanel VerticalAlignment="Center">
                            <TextBox Text="{Binding ElementName=reqMax, Path=Value, UpdateSourceTrigger=PropertyChanged}" DockPanel.Dock="Right" TextAlignment="Center" Width="40" />
                            <Slider Name="reqMax" Value="4" Margin="0,0,10,0" IsSnapToTickEnabled="True" Maximum="4" Minimum="1" TickPlacement="BottomRight" Ticks="1, 2, 3, 4"/>
                        </DockPanel>
                    </StackPanel>
                </Grid>
            </TabItem>
    <TabItem Header="Plants/Seeds" />
        </TabControl>
    </Grid>
</Window>
